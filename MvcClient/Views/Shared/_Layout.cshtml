<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Metoda Reporting</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <style>
        html, body { height: 100%; margin: 0; }
    </style>
</head>
<body class="d-flex flex-column min-vh-100">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid px-3">
                <a class="navbar-brand fw-semibold text-primary" asp-area="" asp-controller="Home" asp-action="Index">Metoda Reporting</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex align-items-center">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Home" asp-action="Index">Generazione report</a>
                        </li>
                    </ul>
                    <div class="ms-auto d-flex align-items-center gap-2">
                        <a class="btn btn-outline-primary d-flex align-items-center" asp-controller="User" asp-action="Profile">
                            <i class="bi bi-person-circle me-2"></i>
                            <span>Profilo</span>
                        </a>
                        <a class="btn btn-primary d-flex align-items-center" href="/Identity/Account/Manage/">
                            <i class="bi bi-gear me-2"></i>
                            <span>Impostazioni</span>
                        </a>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <!-- main è figlio diretto di body -->
    <main role="main" class="flex-grow-1">
        <div class="container">
            @RenderBody()
        </div>
    </main>

    <footer class="footer mt-auto py-2 bg-light text-center">
        <div class="container">
            &copy; 2025 - Metoda Report Web App - Francesco Lanzara
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AuthServer</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        html, body {
            height: 100%;
            margin: 0;
        }
    </style>
</head>
<body class="d-flex flex-column min-vh-100">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid px-3">
                @{
                    var path = Context?.Request?.Path.Value ?? string.Empty;
                    var isManage = path.Contains("/Account/Manage", StringComparison.OrdinalIgnoreCase);
                }

                @if (isManage)
                {
                    <a class="navbar-brand fw-semibold text-primary" href="@Url.Content("~/")">Metoda Reporting</a>
                }
                else
                {
                    <a class="navbar-brand fw-semibold text-primary" asp-area="Identity" asp-page="/Account/Login">Metoda Reporting</a>
                }

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex align-items-center">
                    <div class="ms-auto p-0 m-0">
                        <partial name="_LoginPartial" />
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <main role="main" class="flex-grow-1">
        <div class="container-fluid">
            @RenderBody()
        </div>
    </main>

    <footer class="footer mt-auto py-2 bg-light text-center">
        <div class="container">
            &copy; 2025 - Metoda Report Web App - Francesco Lanzara
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

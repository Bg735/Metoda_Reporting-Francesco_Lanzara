@page
@using AuthServer.Areas.Identity.Pages.Account.Manage
@model DeletePersonalDataModel
@{
    ViewData["Title"] = "Elimina account";
    ViewData["ActivePage"] = ManageNavPages.DeletePersonalData;
}

<div class="container py-4" style="max-width: 900px;">
    <div class="row mb-4">
        <div class="col text-center">
            <h2 class="mb-2">@ViewData["Title"]</h2>
        </div>
    </div>

    <div class="row g-4">
        <div class="col-12">
            <div class="card border-danger shadow-sm">
                <div class="card-body">
                    <h5 class="card-title text-danger">Elimina profilo</h5>
                    <p class="card-text">Questa operazione elimina definitivamente l'account e tutti i dati associati. L'azione è irreversibile.</p>

                    <form id="delete-user" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                        @if (Model.RequirePassword)
                        {
                            <div class="form-floating mb-3">
                                <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Inserisci la tua password." />
                                <label asp-for="Input.Password" class="form-label"></label>
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>
                        }
                        <div class="d-flex justify-content-center">
                            <button class="btn btn-danger w-50" type="submit">Elimina il mio account e cancella i dati associati</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

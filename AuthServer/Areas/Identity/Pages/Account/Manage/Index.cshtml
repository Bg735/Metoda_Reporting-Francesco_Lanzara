@page
@using AuthServer.Areas.Identity.Pages.Account.Manage
@model IndexModel
@{
    ViewData["Title"] = "Profilo";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<div class="container py-4" style="max-width: 900px;">
    <div class="row mb-4">
        <div class="col text-center">
            <h2 class="mb-2">@ViewData["Title"]</h2>
            <partial name="_StatusMessage" for="StatusMessage" />
        </div>
    </div>

    <div class="row g-4">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Informazioni profilo</h5>
                    <p class="card-text">Modifica le informazioni di contatto del tuo profilo.</p>

                    <form id="profile-form" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                        <div class="form-floating mb-3">
                            <input asp-for="Username" class="form-control" placeholder="Username" disabled />
                            <label asp-for="Username" class="form-label"></label>
                        </div>
                        <div class="form-floating mb-3">
                            <input asp-for="Input.PhoneNumber" class="form-control" placeholder="Inserisci il tuo numero di telefono."/>
                            <label asp-for="Input.PhoneNumber" class="form-label"></label>
                            <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                        </div>
                        <div class="d-flex justify-content-center">
                            <button id="update-profile-button" type="submit" class="btn btn-primary w-50">Salva</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}